<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mac_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "test" />

    <TextView
        android:id="@+id/data_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "test" />

    <TextView
        android:id="@+id/gatt_services_discovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "test" />

    <TextView
        android:id="@+id/text_connection_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "test" />

    <Button
        android:id="@+id/button_write_char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_char"
        android:background="@color/colorApricot"
        android:textColor="@color/colorDimGray"
        android:onClick="onClickWrite" />

</LinearLayout>

                  